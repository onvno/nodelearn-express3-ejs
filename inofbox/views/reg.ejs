
<form class="form-horizontal" method="post" action="">
	
	<fieldset>
		<legend>注册</legend>
		<div class="control-group">
			<label for="username" class='control-label'>用户名</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="username" name="username">
				<p class="help-block">用户名用于登录和展示</p>
			</div>
		</div>

		<div class="control-group">
			<label for="password" class='control-label'>输入密码</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password" name="password">
			</div>
		</div>

		<div class="control-group">
			<label for="password-repeat" class='control-label'>再次输入密码</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password-repeat" name="password-repeat">
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">点击注册</button>
		</div>
	</fieldset>
	
</form>







